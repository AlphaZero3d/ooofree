{{!< main}}  <!-- This tells Handlebars to use the main layout -->

<h1>Add Workout</h1>
<form action="/add_workout" method="POST">
    <div>
        <label for="date">Date</label>
        <input type="date" name="date" id="date" required>
    </div>
    <div>
        <label for="exercise">Exercise</label>
        <input type="text" name="exercise" id="exercise" required>
    </div>
    <div>
        <label for="sets">Sets</label>
        <input type="number" name="sets" id="sets" required>
    </div>
    <div>
        <label for="reps">Reps</label>
        <input type="number" name="reps" id="reps" required>
    </div>
    <div>
        <label for="weight">Weight (lbs)</label>
        <input type="number" name="weight" id="weight" required>
    </div>
    <button type="submit">Add Workout</button>
</form>
